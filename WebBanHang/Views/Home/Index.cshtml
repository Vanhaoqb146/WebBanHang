@model WebBanHang.ModelViews.HomeViewVM
@using PagedList.Core
@using Microsoft.AspNetCore.Routing
@{
    ViewData["Title"] = "Perfect Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Slider Area -->
